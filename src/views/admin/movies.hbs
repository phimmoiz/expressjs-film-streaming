    <div data-testid="category-item"
      class="rounded flex items-center bg-pink-100 dark:bg-gray-700 hover:bg-pink-200 dark:hover:bg-pink-500 p-2"
      @click="show = !show">
      <span class="flex-grow">
        {{this.title}}
