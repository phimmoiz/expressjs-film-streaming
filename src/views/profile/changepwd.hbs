<div>
  {{#if user}}
  <div class="my-4 text-center">
    <i class="fas fa-exclamation-circle"></i> Bạn đã đăng nhập với {{user.username}}
  </div>
  <div class="rounded-md h-screen shadow-lg relative">
    <div class="h-1/4">
      <img class="rounded-full border w-40 h-40 border-gray-400 absolute top-5 left-5 " src="{{user.avatar}}"
        alt="{{user.username}}" />
    </div>
    <div class="grid grid-cols-7 gap-y-5">
      <div class="col-span-2">
        <h3 class="text-xl mb-2 px-2">
          Trang Thông tin
        </h3>
        <ul class="divide-y divide-pink-500">
          <li class="p-4 text-lg font-semibold transform hover:translate-x-2 cursor-pointer">
            Thông tin cá nhân
          </li>
          <li class="p-4 text-lg transform hover:translate-x-2 cursor-pointer">
            Đổi mật khẩu
          </li>
          <li class="p-4 text-lg transform hover:translate-x-2 cursor-pointer">
            Chính sách và quy định
          </li>
          <li class="p-4 text-lg transform hover:translate-x-2 cursor-pointer">
            Hỗ trợ
          </li>
        </ul>
      </div>
      <div class="col-span-1"></div>
      <div class="col-span-3">
        <h3 class="text-xl mb-2 px-2 font-semibold">
          Thông tin cá nhân
        </h3>
        <h3 class="text-lg p-2 border m-1 border-pink-400 rounded">
          Họ và tên: {{user.fullname}}
        </h3>
        <h3 class="text-lg p-2 border m-1 border-pink-400 rounded">
          Tên đăng nhập: {{user.username}}
        </h3>
        <h3 class="text-lg p-2 border m-1 border-pink-400 rounded">
          Email: {{user.email}}
        </h3>
        <h3 class="text-lg p-2 border m-1 border-pink-400 rounded">
          Vai trò: {{user.role}}
      </div>

    </div>
   
  </div>
</div>
{{else}}
{{t "profile.noUser"}}
{{/if}}
</div>