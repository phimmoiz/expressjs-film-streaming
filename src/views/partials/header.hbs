<script>
  $("#navbarToggle").click(function() { console.log('click handle')
  $("#nav").toggleClass("hiddeni"); }); if ($(window).width() < 768) {
  $("#nav").addClass("hiddeni"); } else {
  $("#navbarToggle").addClass("hiddeni"); } $(window).resize(function() { if
  ($(window).width() <= 768) { $("#navbarToggle").removeClass("hiddeni");
  $("#nav").addClass("hiddeni"); } else {
  $("#navbarToggle").addClass("hiddeni"); $("#nav").removeClass("hiddeni"); }
  });
</script>
<script>
  const themeVal = localStorage.getItem("theme") || "dark"; if(themeVal) {
  document.querySelector("html").setAttribute("data-theme", themeVal); }
  $("#themeToggle").click(function() { const el =
  document.querySelector("html"); const themeVal = localStorage.getItem("theme")
  || "dark"; if (themeVal === "dark") { el.dataset.theme = "light";
  localStorage.setItem("theme", "light"); //change svg path $("#themeToggle svg
  path").attr("d", "M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012
  21a9.003 9.003 0 008.354-5.646z"); } else { el.dataset.theme = "dark";
  localStorage.setItem("theme", "dark"); $("#themeToggle svg path").attr("d",
  "M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343
  6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0
  4 4 0 018 0z"); } }); // change dataset html tag to dark
  /*$("#search").click(function() { $("#search-form").toggleClass("hiddeni");
  });*/
</script>
<div class="max-w-6xl mx-auto mt-20">
  {{#unless user}}
    <div class="alert mx-2 text-base-content">
      <div class="flex-1">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          class="w-6 h-6 mx-2 stroke-current"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          ></path>
        </svg>
        <label>Bạn chưa đăng nhập,
          <a class="link link-hover font-bold" href="/signin">đăng nhập</a>
          hoặc
          <a class="link link-hover font-bold" href="/signup">đăng ký</a>.
        </label>
      </div>
    </div>
  {{/unless}}
</div>

<script>
  var prevScrollpos = window.pageYOffset; window.onscroll = function() { var
  currentScrollPos = window.pageYOffset; if (prevScrollpos > currentScrollPos) {
  document.getElementById("navbar").style.top = "0"; } else {
  document.getElementById("navbar").style.top = "-50px"; } prevScrollpos =
  currentScrollPos; }

</script>