{{! error page without header/footer tailwind }}
<div
  class="flex flex-col items-center justify-center h-screen text-gray-800 dark:text-white"
>
  <div class="text-center">
    <h1 class="text-6xl">
      {{error.status}}
    </h1>
    <h2 class="text-3xl">
      {{error.message}}
    </h2>
    <p class="text-opacity-80">
      {{error.description}}
    </p>
    <a
      href="/"
      class="text-blue-500 hover:underline px-10 py-2 my-2 bg-gray-200 hover:bg-opacity-95 rounded-full block"
    >
      Go back home
    </a>
  </div>
</div>